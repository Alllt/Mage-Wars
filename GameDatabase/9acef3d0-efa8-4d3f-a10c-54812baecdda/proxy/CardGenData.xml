<?xml version="1.0" encoding="utf-8" ?>
<templates>
	<blocks>
		<block type="text" id="Title">
			<location x="1" y="1" />
			<text color="#000000" size="30" />
			<border color="#FFFFFF" size="1" />
			<wordwrap height="80" width="318" />
		</block>
		<block type="text" id="Type">
			<location x="1" y="20" />
			<text color="#000000" size="15" />
		</block>
		<block type="text" id="Subtype">
			<location x="2" y="20" />
			<text color="#000000" size="15" />
		</block>
		<block type="text" id="Cost">
			<location x="1" y="1" />
			<text color="#000000" size="15" />
		</block>
		<block type="text" id="Action">
			<location x="1" y="1" />
			<text color="#000000" size="15" />
		</block>
		<block type="text" id="Range">
			<location x="1" y="1" />
			<text color="#000000" size="15" />
		</block>
		<block type="text" id="Target">
			<location x="1" y="1" />
			<text color="#000000" size="15" />
		</block>
		<block type="text" id="School">
			<location x="1" y="1" />
			<text color="#000000" size="15" />
		</block>
		<block type="text" id="Level">
			<location x="1" y="1" />
			<text color="#000000" size="15" />
		</block>
		<block type="text" id="Stats">
			<location x="1" y="1" />
			<text color="#000000" size="15" />
		</block>
		<block type="text" id="AttackBar">
			<location x="1" y="1" />
			<text color="#000000" size="15" />
		</block>
		<block type="text" id="Traits">
			<location x="1" y="1" />
			<text color="#000000" size="15" />
		</block>
		<block type="text" id="Text">
			<location x="1" y="1" />
			<text color="#000000" size="15" />
			<wordwrap height="17" width="230" shrinktofit="True"/>
		</block>
		<block type="text" id="CardID">
			<location x="1" y="1" />
			<text color="#000000" size="15" />
		</block>
	</blocks>

	<template src="proxy/card.png" default="True" >
		<matches>
			<match name="Type" value="Mage" />
		</matches>
		<textblocks>
			<link block="title"><property name="Name" /></link>      
		</textblocks> 
