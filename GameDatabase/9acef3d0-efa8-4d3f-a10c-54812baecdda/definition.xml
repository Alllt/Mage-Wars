<?xml version="1.0" encoding="utf-8"?>
<game xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	name="Mage Wars"
	id="9acef3d0-efa8-4d3f-a10c-54812baecdda"
	octgnVersion="3.1.50.145"
	version="1.2.11.7"
	markersize="16"
	tags="Mage Wars"
	description="A cardgame of dueling mages. Each mage brings his spellbook and abilities in a fight to the death"
	setsurl="http://octgn.gamersjudgement.com/wordpress/magewars/"
	gameurl="http://octgn.gamersjudgement.com/wordpress/magewars/"
	authors="Cosworth, sIKE, lettucemode"
	iconurl="http://octgn.gamersjudgement.com/wordpress/magewars/wp-content/uploads/sites/33/2013/06/image1.png"
	usetwosidedtable="False">
	<scripts>
		<script src="scripts/actions.py" />
	</scripts>
	<events>
		<event name="OnGameStart" action="onGameStart"/>
		<event name="OnLoadDeck" action="onLoadDeck"/>
	</events>
	<proxygen definitionsrc="proxy/CardGenData.xml"/>
	<documents>
		<document name="Instructions" icon="Documents/MW-Help.png" src="Documents/MW-Help.html" />
	</documents>
	<card back="cards/card.jpg" front="cards/card.jpg" width="55" height="74" cornerRadius="3">
		<property name="Type" type="String" hidden="False" ignoreText="False"/>
		<property name="Subtype" type="String" hidden="False" ignoreText="False" />
		<property name="Cost" type="String" hidden="False" ignoreText="False"/>
		<property name="Action" type="String" hidden="False" ignoreText="False" />
		<property name="Range" type="String" hidden="False" ignoreText="False" />
		<property name="Target" type="String" hidden="False" ignoreText="False"/>
		<property name="School" type="String" hidden="False" ignoreText="False" />
		<property name="Level" type="String" hidden="False" ignoreText="False" />
		<property name="Stats" type="String" hidden="False" ignoreText="False" />
		<property name="AttackBar" type="String" hidden="False" ignoreText="False" />
		<property name="Traits" type="String" hidden="False" ignoreText="False"/>
		<property name="Text" type="String" hidden="False" ignoreText="False"/>
		<property name="CardID" type="String" hidden="False" ignoreText="False"/>
	</card>
	<table name="Table" visibility="undefined" ordered="False" width="600" height="450" board="background/gameboard.png" background="background/background.png" boardPosition="-300,-225,600,450" backgroundStyle="uniformToFill">
		<groupaction menu="Done" default="False" shortcut="Ctrl+Right" execute="playerDone"/>
		<groupaction menu="Roll Dice" default="False" shortcut="F1" execute="rollDice" />
		<groupaction menu="Flip a Coin" default="False" execute="flipCoin" />
		<groupaction menu="Add Vine a Marker" default="False" shortcut="F3" execute="createVineMarker" />
		<groupaction menu="Flip Game Board" default="False" shortcut="F9" execute="flipGameBoard"/>
		<groupactions menu="Automation">
			<groupaction menu="Next Phase" default="False" shortcut="Ctrl+Down" execute="nextPhase"/>
			<groupaction menu="Toggle Debug Mode" default="False" execute="toggleDebug"/>
		</groupactions>
		<cardactions menu="Add Tokens">
			<cardaction menu="Add Damage" default="False" shortcut="F2" execute="addDamage"/>
			<cardaction menu="Add Mana" default="False" shortcut="Ctrl+M" execute="addMana"/>
			<cardaction menu="Add Burn Token" default="False" shortcut="Ctrl+B" execute="addBurn"/>
			<cardaction menu="Add Daze Token" default="False" shortcut="Ctrl+D" execute="addDaze"/>
			<cardaction menu="Add Stun Token" default="False" shortcut="Ctrl+S" execute="addStun"/>
			<cardaction menu="Add Slam Token" default="False" shortcut="Alt+S" execute="addSlam" />
			<cardaction menu="Add Weak Token" default="False" shortcut="Ctrl+W" execute="addWeak"/>
			<cardaction menu="Add Cripple Token" default="False" shortcut="Ctrl+C" execute="addCripple"/>
			<cardaction menu="Add Other Token" default="False" shortcut="Ctrl+O" execute="addOther" />
		</cardactions>
		<cardactions menu="Toggle Markers">
			<cardaction menu="Toggle Action Marker" default="False" shortcut="Ctrl+A" execute="toggleAction"/>
			<cardaction menu="Toggle Quick Cast Marker " default="False" shortcut="Ctrl+Q" execute="toggleQuick" />
			<cardaction menu="Toggle Ready Marker" default="False" shortcut="Ctrl+R" execute="toggleReady"/>
			<cardaction menu="Toggle Guard Marker" default="False" shortcut="Ctrl+G" execute="toggleGuard"/>
			<cardaction menu="Toggle Voltaric Shield Marker" default="False" shortcut="Ctrl+V" execute="toggleVoltaric"/>
			<cardaction menu="Toggle Deflect Marker" default="False" shortcut="Alt+D" execute="toggleDeflect" />
			<cardaction menu="Toggle Blood Reaper Token" default="False" shortcut="Alt+B" execute="toggleBloodReaper" />
			<cardaction menu="Toggle Invisible Marker" default="False" shortcut="Ctrl+I" execute="toggleInvisible"/>
			<cardaction menu="Toggle Pet Marker" default="False" shortcut="Ctrl+P" execute="togglePet"/>
			<cardaction menu="Toggle Taunt Marker (Sosruko)" default="False" shortcut="Ctrl+T" execute="toggleTaunt"/>
			<cardaction menu="Toggle Taunt Marker (Thorg)" default="False" shortcut="Alt+T" execute="toggleTauntT"/>
		</cardactions>
		<cardactions menu="Remove Tokens">
			<cardaction menu="Remove Damage" default="False" shortcut="F4" execute="subDamage" />
			<cardaction menu="Remove Mana" default="False" shortcut="Ctrl+Shift+M" execute="subMana" />
			<cardaction menu="Remove Burn Token" default="False" shortcut="Ctrl+Shift+B" execute="subBurn" />
			<cardaction menu="Remove Daze Token" default="False" shortcut="Ctrl+Shift+D" execute="subDaze" />
			<cardaction menu="Remove Stun Token" default="False" shortcut="Ctrl+Shift+S" execute="subStun" />
			<cardaction menu="Remove Slam Token" default="False" shortcut="Alt+Shift+S" execute="subSlam"/>
			<cardaction menu="Remove Weak Token" default="False" shortcut="Ctrl+Shift+W" execute="subWeak"/>
			<cardaction menu="Remove Cripple Token" default="False" shortcut="Ctrl+Shift+C" execute="subCripple" />
			<cardaction menu="Remove All Tokens" default="False" shortcut="Ctrl+Shift+A" execute="clearTokens" />
		</cardactions>
			<cardaction menu="Exhaust/Ready" default="False" shortcut="F7" execute="kneel" />
			<cardaction menu="Flip Card" default="False" shortcut="Ctrl+F" execute="flipcard"/>
			<cardaction menu="Discard" default="False" shortcut="Del" execute="discard"/>
			<cardaction menu="Double Click" default="True" execute="defaultAction" />
	</table>
	<player summary="Chan: {#Channeling} | Mana: {#Mana} | Dam: {#Damage}| Life: {#Life}">
		<counter name="Channeling" default="0" reset="True" icon="counters/channeling.png" />
		<counter name="Mana" default="0" reset="True" icon="counters/mana.png" />
		<counter name="Damage" default="0" reset="True" icon="counters/damage.png" />
		<counter name="Life" default="0" reset="True" icon="counters/life.png" />
		<hand name="Hand" visibility="me" ordered="False" width="126" height="176" icon="groups/hand.png">
			<cardaction menu="Play card facedown" default="True" shortcut="Ctrl+Shift+P" execute="playCardFaceDown"/>
			<cardaction menu="Discard" default="False" shortcut="Del" execute="discard"/>
		</hand>
		<group name="Discard" visibility="all" ordered="False" width="126" height="176" icon="groups/discard.png" collapsed="False">
		</group>
	</player>
	<deck>
		<section name="Mage" group="Hand"/>
		<section name="Attack" group="Hand"/>
		<section name="Conjuration" group="Hand" />
		<section name="Creature" group="Hand"/>
		<section name="Enchantment" group="Hand" />
		<section name="Equipment" group="Hand" />
		<section name="Incantation" group="Hand" />
	</deck>
</game>